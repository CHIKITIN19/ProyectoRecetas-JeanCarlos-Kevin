<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".menu"
    android:background="@drawable/menu_pantalla"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bangers"
                android:text="Menú de Selección"
                android:textAlignment="center"
                android:layout_marginBottom="35dp"

                android:textColor="#000000"
                android:textSize="34sp" />

            <Button
                android:id="@+id/btnIngresarReceta"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:insetRight="@dimen/m3_btn_inset"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Ingresar Receta" />
            <Button
                android:id="@+id/btnListaReceta"
                style="@style/Widget.Material3.ExtendedFloatingActionButton.Primary"
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="25dp"
                android:insetRight="@dimen/m3_btn_inset"
                android:backgroundTint="@color/green"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:text="Lista Recetas" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>